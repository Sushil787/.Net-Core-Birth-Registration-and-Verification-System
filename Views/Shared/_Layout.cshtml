<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AspnetIdentityRoleBasedTutorial.styles.css" asp-append-version="true" />
    <style>
        /* Ensure that the body takes up the full viewport height */
        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            height: 60px;
            /* Height of the footer */
            background: rgb(188, 195, 199);
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 20px; font-weight: 400;">DOTM BMC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="font-size: 20px; font-weight: 400;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @* @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item" style="font-size: 20px; font-weight: 400;">

                                <a class="nav-link text-dark" asp-area="" asp-controller="Product"
                                    asp-action="GetAll">Products</a>
                            </li>
                        } *@
                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item" style="font-size: 20px; font-weight: 400;">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Registration"
                                    asp-action="RegisterBaby">Register</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item" style="font-size: 20px; font-weight: 400;">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Inventory"
                                    asp-action="GetAll">Inventory</a>
                            </li>
                        }
                        <li class="nav-item" style="font-size: 20px; font-weight: 400;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted" style="padding: 10px; font-size: 20px; font-weight: bold;">
        <div class="container">
            &copy; 2023 - DARTA - <a asp-area="" asp-controller="Home" asp-action="Privacy"
                style="text-decoration: none; color: #555;">Privacy</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
